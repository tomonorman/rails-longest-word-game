<div class="container">
  <h1>New Game</h1>

  <div class="d-flex flex-row bd-highlight mb-3">
    <% @letters.each do |letter| %>
    <p class ="p-2 bd-highlight m-2 letter"> <%= letter %> </p>
    <% end %>
  </div>

  <form action="/score" method="post" class="form-inline">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <label class="sr-only" for="guess">Whats the longest word you can make?</label>
    <input type="text" class="form-control mb-2 mr-sm-2" id="guess" placeholder="Take a guess!" name="answer">
    <button type="submit" class="btn btn-primary mb-2">Submit</button>
  </form>
</div>
